    "domain",
    "domain-parser",
    "domain validator",
    "public suffix list",
    "psl",
    "tld",
    "subdomain",
    "url",
    "parser",
    "php"
  ],
  "homepage": "https://github.com/silvarcode/domain-parser",
  "license": "MIT",
  "authors": [
    {
      "name": "Marcus Ribeiro",
      "email": "mds@silvarcode.com",
      "homepage": "https://silvarcode.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.2"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "SilvarCode\\DomainParser\\": "src/"
    }
